<%- include('templates/header',{linkCSS: '/CSS/iniciar-sesion.css', TituloPagina: 'Inicio de sesion'})%>
<body>

    <div class="main-container">
        <div class="inicio-container">
            
            <p>¿Ya tienes cuenta?</p>
            <form>
                <label for="correo">Correo:</label>
                <input type="email" id="iniciar-correo" required>
                <label>Contraseña:</label>
                <input type="password" id="iniciar-password" required>
            </form>
            <button id="btn-iniciar">Iniciar sesión</button>
        </div>
        <div class="registro-container">
            <img src="/IMG/user3.png">
            <p>¿Pantera nueva?</p>
            <form>
                <label for="correo">Nombre:</label>
                <input type="text" name="registro-nombre" required>
    
                <label >Apellido:</label>
                <input type="text" name="registro-apellido" required>
    
                <label>Correo:</label>
                <input type="email" name="registro-correo" required>
    
                <label>Contraseña</label>
                <input type="password" name="registro-password" required>
                <label id="password-error" class="error"></label>

                <label>Confirma tu contraseña:</label>
                <input type="password" name="registro-password-confirmation">
                <label id="password-confirmation-error" class="error"></label>
            </form>
            <button type="submit" id="btn-registrar">Crear cuenta</button>
        </div>
    </div>
    

    <script src="/JS/iniciar-sesion.js"></script>
</body>